<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="colorPrimary">@color/prussianBlue</item>
        <item name="colorPrimaryDark">@color/prussianBlueDark</item>
        <item name="colorSecondary">@color/imperialRed</item>
		<item name="android:textColorPrimary">@android:color/white</item>
		<item name="android:textAllCaps">false</item>
		<item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
	</style>
	
	<style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowExitTransition">@null</item>
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

	<style name="AppTheme.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/matrixGreen</item>
	</style>

	<style name="PageTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:textColorPrimary">@color/prussianBlue</item>
		<item name="android:textAllCaps">false</item>
		<item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
	</style>

	<style name="ButtonPageTheme" parent="PageTheme">
		<item name="colorPrimary">@color/mustardYellow</item>
		<item name="colorPrimaryDark">@color/mustardYellowDark</item>
		<item name="colorSecondary">@color/timberGreen</item>
	</style>

	<style name="TextPageTheme" parent="PageTheme">
		<item name="colorPrimary">@color/comoGreen</item>
		<item name="colorPrimaryDark">@color/comoGreenDark</item>
		<item name="colorSecondary">@color/mountBattenPink</item>
	</style>

	<style name="HttpPageTheme" parent="PageTheme">
		<item name="colorPrimary">@color/pacificBlue</item>
		<item name="colorPrimaryDark">@color/pacificBlueDark</item>
		<item name="colorSecondary">@color/davysGrey</item>
	</style>

	<style name="WebSocketPageTheme" parent="PageTheme">
		<item name="colorPrimary">@color/alloyOrange</item>
		<item name="colorPrimaryDark">@color/alloyOrangeDark</item>
		<item name="colorSecondary">@color/blackChocolate</item>
	</style>

	<style name="TokenPageTheme" parent="PageTheme">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="WidgetImageStyle">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="WidgetCardViewStyle" parent="CardView">
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">15dp</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">160dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="ConnectivityCardViewStyle" parent="CardView">
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">15dp</item>
		<item name="android:layout_width">160dp</item>
		<item name="android:layout_height">100dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="WidgetTextStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="ConnectivityTextStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="HeaderTextStyle">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/header_text_size</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="DescriptionTextStyle">
		<item name="android:textSize">@dimen/description_text_size</item>
		<item name="android:textColor">@color/celadonBlue</item>
	</style>

	<style name="WidgetItemCardViewStyle" parent="CardView">
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">5dp</item>
	</style>

	<style name="TokenImageStyle">
		<item name="android:layout_marginLeft">40dp</item>
		<item name="android:layout_marginRight">40dp</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="TokenTextStyle">
		<item name="android:layout_marginLeft">40dp</item>
		<item name="android:layout_marginRight">40dp</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="TokenButtonStyle">
		<item name="android:layout_marginLeft">40dp</item>
		<item name="android:layout_marginRight">40dp</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:textSize">14sp</item>
	</style>
</resources>
