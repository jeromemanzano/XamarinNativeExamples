<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:MvxBind="Text Title"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        app:animationDuration="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="FoldingCellOpen CellOpen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="20dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="20dp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textSize="14sp"
                android:text="@string/text_text_binding_description"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/input_text"
                android:text="@string/button_long_click_count_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:hint="@string/text_hint_type_here"
                app:MvxBind="Text Text"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"/>
            <TextView
                android:id="@+id/text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:MvxBind="Text Text"
                app:layout_constraintTop_toBottomOf="@+id/input_text"
                app:layout_constraintStart_toStartOf="@+id/input_text"/>
            <Button
                android:id="@+id/click_button"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:MvxBind="Text Text"
                app:layout_constraintTop_toBottomOf="@+id/text_label"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"/>
            <TextView
                android:background="@color/comoGreen"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/close"
                android:id="@+id/close"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:MvxBind="Click ToggleFoldStateCommand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_up"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/open"
                android:background="@color/comoGreen"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/open"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="75dp"
                app:MvxBind="Click ToggleFoldStateCommand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/open"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.ramotion.foldingcell.FoldingCell>
</FrameLayout>