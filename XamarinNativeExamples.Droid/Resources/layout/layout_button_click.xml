<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WidgetItemCardViewStyle"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:MvxBind="Text ButtonClick.Title"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        app:animationDuration="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="FoldingCellOpen ButtonClick.CellOpen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="20dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="20dp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textSize="14sp"
                app:MvxBind="Text ButtonClick.Description"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/long_click_counter_label"
                android:text="@string/button_long_click_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"/>
            <TextView
                android:id="@+id/click_counter_label"
                android:text="@string/button_click_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/long_click_counter_label"
                app:layout_constraintStart_toStartOf="@+id/long_click_counter_label"/>
            <TextView
                android:id="@+id/long_click_counter"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:MvxBind="Text ButtonClick.LongClickCount"
                app:layout_constraintTop_toTopOf="@+id/long_click_counter_label"
                app:layout_constraintStart_toEndOf="@+id/long_click_counter_label"/>
            <TextView
                android:id="@+id/click_counter"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:MvxBind="Text ButtonClick.ClickCount"
                app:layout_constraintTop_toTopOf="@+id/click_counter_label"
                app:layout_constraintStart_toEndOf="@+id/click_counter_label"/>
            <Button
                android:id="@+id/click_button"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:MvxBind="Click ButtonClick.ClickCommand; 
                    LongClick ButtonClick.LongClickCommand;
                    Text ButtonClick.ButtonText"
                app:layout_constraintTop_toBottomOf="@+id/click_counter_label"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                app:layout_constraintBottom_toTopOf="@+id/close"
                app:layout_constraintStart_toStartOf="@+id/left_guideline"/>
            <TextView
                android:background="@color/mustardYellow"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/close"
                android:id="@+id/close"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:MvxBind="Click ButtonClick.ToggleFoldStateCommand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/click_button"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_up"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/open"
                android:background="@color/mustardYellow"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/open"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="75dp"
                app:MvxBind="Click ButtonClick.ToggleFoldStateCommand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginEnd="20dp"
                android:clickable="false"
                app:layout_constraintTop_toTopOf="@+id/open"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.ramotion.foldingcell.FoldingCell>
</com.google.android.material.card.MaterialCardView>