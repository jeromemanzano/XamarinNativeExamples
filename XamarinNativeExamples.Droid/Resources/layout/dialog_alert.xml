<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
    <xamarinnativeexamples.droid.controls.BlurView
        android:id="@+id/dialog_alert_blur_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurRadius="2"
        app:downsampleFactor="6"
        app:overlayColor="@color/defaultOverlayColor"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_alert_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_matrix">
        <TextView
            android:id="@+id/dialog_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="Alert title"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/dialog_alert_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="vertical"
            android:maxLines="4"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="Confirm deletion of chat history with ‘Group Name’"
            app:layout_constraintTop_toBottomOf="@+id/dialog_alert_title"
            app:layout_constraintBottom_toTopOf="@+id/dialog_alert_positive_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
			android:id="@+id/dialog_alert_negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
			android:text="Cancel"
            android:layout_marginBottom="20dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_alert_message"
            app:layout_constraintEnd_toStartOf="@+id/dialog_alert_positive_button"/>
        <Button
			android:id="@+id/dialog_alert_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
			android:text="OK"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@+id/dialog_alert_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
