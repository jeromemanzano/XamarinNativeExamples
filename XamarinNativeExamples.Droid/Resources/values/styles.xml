<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="colorPrimary">@color/prussianBlue</item>
        <item name="colorPrimaryDark">@color/prussianBlueDark</item>
        <item name="colorSecondary">@color/imperialRed</item>
		<item name="android:textColorPrimary">@android:color/white</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	<style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowExitTransition">@null</item>
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

	<style name="WidgetTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:textColorPrimary">@color/prussianBlue</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="ButtonPageTheme" parent="WidgetTheme">
		<item name="colorPrimary">@color/mustardYellow</item>
		<item name="colorPrimaryDark">@color/mustardYellowDark</item>
		<item name="colorSecondary">@color/timberGreen</item>
	</style>

	<style name="WidgetImageStyle">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="WidgetCardViewStyle" parent="CardView">
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">15dp</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">160dp</item>
		<item name="android:layout_height">160dp</item>
		<item name="android:layout_height">160dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="WidgetTextStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="HeaderTextStyle">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/header_text_size</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="DescriptionTextStyle">
		<item name="android:textSize">@dimen/description_text_size</item>
		<item name="android:textColor">@color/celadonBlue</item>
	</style>

	<style name="WidgetItemCardViewStyle" parent="CardView">
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">5dp</item>
	</style>
</resources>
